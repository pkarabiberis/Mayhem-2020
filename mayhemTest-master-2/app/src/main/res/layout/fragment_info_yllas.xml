<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".luostoFragments.FragmentSportsLuosto">

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="40dp"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAlignment="center"
				android:layout_marginHorizontal="10dp"
				android:textStyle="bold"
				android:textSize="24dp"
				android:textColor="#000000"
				android:text="MAYHEM@YLLÄS 30.4 - 2.5" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:layout_marginHorizontal="10dp"
				android:textColor="#454343"
				android:textAlignment="center"
				android:textStyle="bold"
				android:textSize="17dp"
				android:textAllCaps="true"
				android:text="Mayhem @Ylläs is the monumental grand final of the season 2020 in Ylläs - the biggest skiresort in Finland. The event will be bigger than ever before and the party will go on for 3 days! "/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:text="Welcome to spend the memorable mayday at Ylläs from 30th of April to 2nd of May!"
				android:textColor="#403F3F"
				android:textAlignment="center"
				android:textStyle="bold"
				android:textSize="16dp"
				/>

			<View
				android:layout_width="80dp"
				android:layout_height="2dp"
				android:layout_gravity="center"
				android:layout_marginVertical="10dp"
				android:background="#009de0"/>

			<LinearLayout
				android:layout_marginVertical="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:layout_marginHorizontal="3dp"
					android:src="@drawable/negrita_logo" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:layout_marginHorizontal="3dp"
					android:src="@drawable/sunfox_logo" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:layout_marginHorizontal="3dp"
					android:src="@drawable/vain2kalaa" />
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				android:textStyle="bold"
				android:textColor="#454343"
				android:layout_marginLeft="20dp"
				android:textSize="20dp"
				android:text="Arriving to Ylläs" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:textColor="#454343"
				android:layout_marginHorizontal="20dp"
				android:text="Ylläs is located 150 km north of the Arctic Circle in Finnish Lapland. You can reach Ylläs by car, train or plane."
				/>

			<TextView
				android:id="@+id/car_yllas_textView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:layout_marginTop="20dp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:drawableEnd="@drawable/ic_add_black_24dp"
				android:text="BY CAR" />

			<TextView
				android:id="@+id/car_yllas_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:textColor="#2B2A2A"
				android:text=""
				/>

			<TextView
				android:id="@+id/train_yllas_textView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:layout_marginTop="20dp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:drawableEnd="@drawable/ic_add_black_24dp"
				android:text="BY TRAIN" />

			<TextView
				android:id="@+id/train_yllas_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:textColor="#2B2A2A"
				android:text=""
				/>

			<TextView
				android:id="@+id/plane_yllas_textView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:layout_marginTop="20dp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:drawableEnd="@drawable/ic_add_black_24dp"
				android:text="BY PLANE" />

			<TextView
				android:id="@+id/plane_yllas_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:textColor="#2B2A2A"
				android:text=""
				/>

			<LinearLayout
				android:layout_marginVertical="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/kuuluttaja" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/lasa" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/motorpark" />
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="50dp"
				/>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</FrameLayout>