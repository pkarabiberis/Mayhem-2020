<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".luostoFragments.FragmentSportsLuosto">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/timetables"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textAlignment="center"
			android:textColor="#000000"
			android:layout_marginVertical="20dp"
			android:textSize="30dp"
			android:text="YllÃ¤s 30.4 - 2.5" />

		<TextView
			android:id="@+id/infoText_yllas"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textColor="#FF0000"
			android:layout_marginHorizontal="10dp"
			android:textSize="20dp"
			android:text="" />

		<LinearLayout
			android:id="@+id/timetablesThur"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textAlignment="center"
				android:textColor="#605F5F"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="20dp"
				android:textStyle="bold"
				android:textSize="16dp"
				android:text="Thursday" />
		</LinearLayout>

		<View
			android:layout_width="40dp"
			android:layout_gravity="center"
			android:layout_height="2dp"
			android:layout_marginVertical="5dp"
			android:background="#c0c0c0"/>
		<LinearLayout
			android:id="@+id/timetablesFri"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textAlignment="center"
				android:textColor="#605F5F"
				android:layout_marginVertical="20dp"
				android:textStyle="bold"
				android:textSize="16dp"
				android:text="Friday" />
		</LinearLayout>

		<View
			android:layout_width="40dp"
			android:layout_gravity="center"
			android:layout_height="2dp"
			android:layout_marginVertical="5dp"
			android:background="#c0c0c0"/>

		<LinearLayout
			android:id="@+id/timetablesSat"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textAlignment="center"
				android:textColor="#605F5F"
				android:layout_marginVertical="20dp"
				android:textStyle="bold"
				android:textSize="16dp"
				android:text="Saturday" />
		</LinearLayout>

		<View
			android:layout_width="40dp"
			android:layout_gravity="center"
			android:layout_height="2dp"
			android:layout_marginVertical="5dp"
			android:background="#c0c0c0"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginVertical="25dp"/>
	</LinearLayout>

	</ScrollView>
</FrameLayout>