<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".luostoFragments.FragmentSportsLuosto">

	<androidx.core.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="40dp"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAlignment="center"
				android:layout_marginHorizontal="10dp"
				android:textStyle="bold"
				android:textSize="27dp"
				android:textColor="#000000"
				android:text="MAYHEM@LUOSTO 18.4" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:textColor="#454343"
				android:textAlignment="center"
				android:textStyle="bold"
				android:textSize="19dp"
				android:text="MAYHEM@LUOSTO IS BACK! THIS YEAR MAYHEM TOUR STARTS FROM LEGENDARY LUOSTOTUNTURI FELL."/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:text="This is where the fun starts! Welcome to join to the first event of Mayhem-tour."
				android:textColor="#403F3F"
				android:textAlignment="center"
				android:textStyle="bold"
				android:textSize="16dp"
				/>

			<View
				android:layout_width="80dp"
				android:layout_height="2dp"
				android:layout_gravity="center"
				android:layout_marginVertical="10dp"
				android:background="#009de0"/>

			<LinearLayout
				android:layout_marginVertical="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/laho" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/polaris_logo_blue" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/nitro_logo" />
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				android:textStyle="bold"
				android:textColor="#454343"
				android:layout_marginLeft="20dp"
				android:textSize="20dp"
				android:text="Arriving to Luosto" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:textColor="#454343"
				android:layout_marginHorizontal="20dp"
				android:text="Luosto is located in Finnish Lapland and its part of the municipality of SodankylÃ¤ . You can reach Luostofell by car, train or plane."
				/>

			<TextView
				android:id="@+id/car_textView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:layout_marginTop="20dp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:drawableEnd="@drawable/ic_add_black_24dp"
				android:text="BY CAR" />

			<TextView
				android:id="@+id/car_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:textColor="#2B2A2A"
				android:text=""
				/>

			<TextView
				android:id="@+id/train_textView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:layout_marginTop="20dp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:drawableEnd="@drawable/ic_add_black_24dp"
				android:text="BY TRAIN" />

			<TextView
				android:id="@+id/train_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:textColor="#2B2A2A"
				android:text=""
				/>

			<TextView
				android:id="@+id/plane_textView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:layout_marginTop="20dp"
				android:textStyle="bold"
				android:textColor="#000000"
				android:drawableEnd="@drawable/ic_add_black_24dp"
				android:text="BY PLANE" />

			<TextView
				android:id="@+id/plane_info"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp"
				android:textColor="#2B2A2A"
				android:text=""
				/>

			<LinearLayout
				android:layout_marginVertical="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/kuuluttaja" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/lasa" />

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:layout_weight="0.33"
					android:src="@drawable/motorpark" />
			</LinearLayout>

			<View
				android:layout_width="match_parent"
				android:layout_height="50dp"
				/>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</FrameLayout>